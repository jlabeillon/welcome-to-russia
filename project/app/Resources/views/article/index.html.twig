{% extends 'base.html.twig' %}

{% block body %}
<div id="container-blog">


		{% for article in articles %}
            <a class="link-article" href="{{ path('article_show', { 'id': article.id }) }}">
				<img class="img-blog" src="{{asset('public/pic/' ~ article.image)}}">
			<h2 class="blog-title">	{{ article.title }}</h2>
			<p>    {{ article.content|truncate(50) }}</p>
			</a>
			<ul>
            	<li>
					{% if is_granted('ROLE_USER')%}
                    	<a href="{{ path('article_edit', { 'id': article.id }) }}" class="btn btn-info btn-xs">Editer</a>
						{% endif %}
            	</li>
            </ul>
		{% endfor %}

    <ul class="list-unstyled">
        <li>
			{% if is_granted('ROLE_USER')%}
            <a href="{{ path('article_add') }}" class="btn btn-primary">Create a new article</a>
			{% endif %}
        </li>
    </ul>
	</div>
{% endblock %}
