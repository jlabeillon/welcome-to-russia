    {{ form_end(edit_form) }}

    <ul class="list-inline">
        <li>
            <a href="{{ path('article_index') }}" class="btn btn-primary">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Supprimer ?')">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
